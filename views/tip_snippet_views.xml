<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="tip_of_the_day_custom_snippet" name="Tips">
        <section class="oe_snippet_body o_colored_level tip-snippet-dynamic"
                 data-snippet="tip_of_the_day"
                 data-name="Tips">
            <div class="tip-content-container text-center">
                <p>Loading today's tip...</p>
            </div>
        </section>
    </template>

    <template id="assets_snippets" inherit_id="website.snippets" name="Add Tip Snippet to Builder">
        <xpath expr="//snippets[@id='snippet_groups']" position="inside">
            <t t-snippet="tip_of_the_day_snippet.tip_of_the_day_custom_snippet"
               t-thumbnail="/tip_of_the_day_snippet/static/src/img/bulb_tip.svg"
               t-name="Tips"/>
        </xpath>
    </template>

    <template id="tip_snippet_options" inherit_id="website.snippet_options">
        <xpath expr="//div[@data-js='Box']" position="before">
            <div data-js="TipSnippetOptions" data-selector=".tip-snippet-dynamic"/>
        </xpath>
    </template>


</odoo>
