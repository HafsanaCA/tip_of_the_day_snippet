<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="tip_of_the_day_custom_snippet" name="Tips">
        <section class="oe_snippet_body o_colored_level tip-snippet-dynamic" data-snippet="tip_of_the_day" data-name="Tips">
            <div class="container text-center">
                <div class="row">
                    <div class="col-12 text-center mt-4 p-5">
                        <h3 class="tip-title">Tip of the day</h3>
                        <p class="lead tip-text">"Stay positive, work hard, make it happen."</p>
                        <p class="mt-3 tip-description">This simple tip reminds us to remain optimistic and take
                            consistent actions. Success is the result of both mindset and effort.
                        </p>
                        <p class="tip-category badge bg-secondary mt-2">Category: Motivation</p>
                        <div class="tip-bg mt-3">
                            <img class="tip-background img-fluid rounded" src="" alt="Background Image"/>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </template>

    <template id="assets_snippets" inherit_id="website.snippets" name="Add Tip Snippet to Builder">
        <xpath expr="//snippets[@id='snippet_groups']" position="inside">
            <t t-snippet="tip_of_the_day_snippet.tip_of_the_day_custom_snippet"
               t-thumbnail="/tip_of_the_day_snippet/static/src/img/bulb_tip.svg"
               t-name="Tips"/>
        </xpath>
    </template>
</odoo>
