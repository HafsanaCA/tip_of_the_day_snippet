<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
  <t t-name="tip_of_the_day_snippet.tip_dynamic_template">
    <div class="card shadow-lg my-5"
         style="border-radius: 35px; overflow: hidden; transition: transform 0.3s ease-in-out;padding:50px;margin:200px;
         background-color:#f7f7f7;border: 1px solid #848884;"
         onmouseover="this.style.transform='scale(1.02)'"
         onmouseout="this.style.transform='scale(1)'">

        <div class="text-dark text-center mb-2">
          <h1 class="m-0" style="font-weight: 800; font-size: 2rem;color:#36454F;"> Tip of the Day </h1>
        </div>
        <hr></hr>

        <div class="d-md-flex d-block w-100">

        <div class="col-md-6 p-3" style="min-height: 350px;border: 1px solid #D3D3D3;border-radius: 5px;">
          <div class="card h-100 text-white position-relative overflow-hidden "
               style="border-radius: 15px; background-size: cover; background-position: center; border: 1px solid #D3D3D3;"
               t-attf-style="background: url('{{ tip.background_image }}') no-repeat center center / cover; ">

              <div class="card-header text-center" style="background-color: #E5E4E2;">
                <h3 class="fw-bold m-0" style="font-size: 1.5rem;color: #5d6d7e;"><t t-esc="tip.name"/></h3>
              </div>

              <div class="card-body d-flex align-items-center justify-content-center text-center"
                   style="background-color: transparent !important;">
                <p class="lead fst-italic m-0" style="font-size: 1.25rem;color:white;font-weight: 700;">
                  "<t t-esc="tip.tip_text"/>"
                </p>
              </div>

              <div class="card-footer text-dark text-end" style="background-color: #E5E4E2;">
                <span class="badge bg-light text-dark px-3 py-2" style="font-size: 0.9rem;text-align:center;">
                  <i class="fa fa-tag me-1"></i>
                    <t t-esc="tip.category"/>
                </span>
              </div>
          </div>
        </div>

            <div class="col-md-6 p-4 bg-light d-flex flex-column justify-content-center align-items-center"
                 style="min-height: 200px;">
          <div class="text-center">
            <h3 class="fw-semibold text-primary">Let’s Get Inspired!</h3>
              <p class="mt-3 text-muted">
              <t t-esc="tip.description"/>
            </p>
              <p class="text-secondary fst-italic mt-3">
              “Inspiration exists, but it has to find you working.”
            </p>
          </div>
        </div>
      </div>

        <hr></hr>
        <div class="text-center text-muted mb-0">
        <small>Stay awesome always..!</small>
      </div>

    </div>
  </t>
</templates>
