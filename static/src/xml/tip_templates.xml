<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
  <t t-name="tip_of_the_day_snippet.tip_dynamic_template">
    <div class="card shadow-lg my-5 border-0"
         style="border-radius: 25px; overflow: hidden; transition: transform 0.3s ease-in-out;padding:50px;margin:200px;background-color:#f7f7f7;"
         onmouseover="this.style.transform='scale(1.02)'"
         onmouseout="this.style.transform='scale(1)'">

      <!-- Card Header -->
      <div class="text-white bg-primary text-center py-2" style="border-radius:20px;">
        <h2 class="m-0" style="font-weight: 600; font-size: 2rem;color:black;"> Tip of the Day </h2>
      </div>

      <!-- Card Body -->
      <div class="d-md-flex d-block w-100">

        <div class="col-md-6 p-3" style="min-height: 350px;">
          <div class="card h-100 text-dark position-relative overflow-hidden"
               style="border-radius: 15px; background-size: cover; background-position: center;"
               t-attf-style="background: url('{{ tip.background_image }}');">

            <!-- Header -->
            <div class="card-header text-white border-bottom-0 text-center" style="background-color: #D3D3D3;">
              <h3 class="fw-bold m-0" style="font-size: 1.5rem;"><t t-esc="tip.name"/></h3>
            </div>

            <!-- Body -->
            <div class="card-body d-flex align-items-center justify-content-center text-center">
              <p class="lead fst-italic m-0" style="font-size: 1.25rem;">
                "<t t-esc="tip.tip_text"/>"
              </p>
            </div>

            <!-- Footer -->
            <div class="card-footer text-dark border-top text-end" style="background-color: #D3D3D3;">
              <span class="badge bg-light text-dark px-3 py-2" style="font-size: 0.9rem;">
                <i class="fa fa-tag me-1"></i>
                <t t-esc="tip.category"/>
              </span>
            </div>
          </div>
        </div>


        <!-- Right Side: Static Text -->
        <div class="col-md-6 p-4 bg-light d-flex flex-column justify-content-center align-items-center" style="min-height: 200px;">
          <div class="text-center">
            <h4 class="fw-semibold text-primary">Let’s Get Inspired!</h4>
            <hr class="my-3" style="width: 50px; border-top: 3px solid #0d6efd;"></hr>
            <p class="mt-3 text-muted">
              This space can be customized to display motivational quotes, announcements,
              or personal notes to keep your users engaged and encouraged daily.
            </p>
            <p class="text-secondary fst-italic mt-3">
              “Inspiration exists, but it has to find you working.”
            </p>
          </div>
        </div>
      </div>

      <!-- Card Footer -->
      <div class="bg-light text-center text-muted py-3" style="border-top: 4px solid #dee2e6;">
        <small>Stay awesome always..!</small>
      </div>

    </div>
  </t>
</templates>
